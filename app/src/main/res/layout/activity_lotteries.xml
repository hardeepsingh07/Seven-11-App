<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tScratchers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Scratchers"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22sp"
        android:textStyle="italic"
        android:typeface="serif" />

    <EditText
        android:id="@+id/tAmount"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tScratchers"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="$"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="20sp"
        android:textStyle="normal"
        android:typeface="serif" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/tStar"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tAmount"
        android:layout_alignBottom="@+id/tAmount"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/tAmount"
        android:ems="10"
        android:hint="Start"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="20sp"
        android:textStyle="normal"
        android:typeface="serif" />

    <EditText
        android:id="@+id/tEn"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tStar"
        android:layout_alignBottom="@+id/tStar"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/tStar"
        android:ems="10"
        android:hint="End"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="20sp"
        android:textStyle="normal"
        android:typeface="serif" />

    <ListView
        android:id="@+id/lvLotteries"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/black"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bAdd" >
    </ListView>

    <Button
        android:id="@+id/bFinish"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@color/black"
        android:text="Finish"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="normal"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/tScratchers"
        android:layout_toRightOf="@+id/bFinish"
        android:src="@drawable/seveneleven" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/tScratchers"
        android:layout_toLeftOf="@+id/bFinish"
        android:src="@drawable/seveneleven" />

    <Button
        android:id="@+id/bAdd"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/tEn"
        android:layout_alignBottom="@+id/tEn"
        android:layout_toRightOf="@+id/bFinish"
        android:background="@color/black"
        android:text="Add"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="normal"
        android:typeface="serif" />

</RelativeLayout>
